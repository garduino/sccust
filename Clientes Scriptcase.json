{
	"application": {
		"title": "Clientes Scriptcase",
		"theme": "bootswatch-darkly",
		"collections": [
			{
				"name": "customers",
				"fields": [
					{
						"name": "fecha_contacto",
						"title": "Fecha de Contacto",
						"type": "date",
						"required": true,
						"exportable": true,
						"input": "datepicker"
					},
					{
						"name": "apenom",
						"title": "Apellido y Nombres",
						"type": "string",
						"required": true,
						"exportable": true
					},
					{
						"name": "email",
						"title": "E-mail",
						"type": "string",
						"required": true,
						"exportable": true
					},
					{
						"name": "empresa",
						"title": "Empresa",
						"type": "string",
						"exportable": true
					},
					{
						"name": "pais",
						"title": "Pais",
						"type": "string",
						"exportable": true,
						"lookup_query_name": "country"
					},
					{
						"name": "observaciones",
						"title": "Observaciones",
						"type": "string",
						"exportable": true,
						"input": "textarea"
					},
					{
						"name": "cupon",
						"title": "Cupón",
						"type": "string",
						"exportable": true
					},
					{
						"name": "comision",
						"title": "Comisión",
						"type": "float",
						"exportable": true
					}
				],
				"type": "collection"
			},
			{
				"name": "countries",
				"type": "collection",
				"fields": [
					{
						"name": "pais",
						"title": "País",
						"type": "string",
						"required": true,
						"exportable": true
					}
				]
			}
		],
		"queries": [
			{
				"name": "customers",
				"collection": "customers"
			},
			{
				"name": "customers_empty",
				"collection": "customers",
				"filter": {
					"_id": null
				},
				"find_one": true
			},
			{
				"name": "customer",
				"collection": "customers",
				"filter": {
					"_id": ":customerId"
				},
				"find_one": true
			},
			{
				"name": "country",
				"collection": "countries",
				"find_one": true,
				"filter": {
					"_id": ":paisId"
				}
			}
		],
		"free_zone": {
			"components": [
				{
					"name": "main_menu",
					"type": "menu",
					"items": [
						{
							"title": "Home page",
							"route": "home"
						},
						{
							"title": "Customers",
							"route": "customers"
						},
						{
							"title": "Countries",
							"route": "countries"
						}
					]
				}
			],
			"pages": [
				{
					"name": "home",
					"components": [
						{
							"name": "home_jumbotron",
							"title": "Example application",
							"type": "jumbotron",
							"text": "<b>This <a href=\"https://www.meteor.com\" target=\"_blank\">Meteor</a> application is made with <a href=\"http://www.meteorkitchen.com\" target=\"_blank\">meteor-kitchen</a> without manual coding.</b><br />It demonstrates how to use DataView and Form components to create simple database application with view, search, insert, edit and delete functions.<br />Source code (input file for generator) is <a href=\"https://github.com/perak/kitchen-examples/tree/master/example-dataview\" target=\"_blank\">here</a>.",
							"button_title": "Continue &raquo;",
							"button_route": "customers"
						}
					],
					"type": "page"
				},
				{
					"name": "customers",
					"components": [
						{
							"name": "view",
							"type": "data_view",
							"title": "Customers",
							"text_if_empty": "No customers :(",
							"query_name": "customers",
							"insert_route": "customers.insert",
							"edit_route": "customers.edit",
							"edit_route_params": [
								{
									"name": "customerId",
									"value": "this._id"
								}
							],
							"details_route": "customers.details",
							"details_route_params": [
								{
									"name": "customerId",
									"value": "this._id"
								}
							]
						}
					],
					"pages": [
						{
							"name": "insert",
							"components": [
								{
									"name": "insert_form",
									"type": "form",
									"mode": "insert",
									"title": "New customer",
									"query_name": "customers_empty",
									"submit_route": "customers",
									"cancel_route": "customers"
								}
							],
							"type": "page"
						},
						{
							"name": "details",
							"route_params": [
								"customerId"
							],
							"components": [
								{
									"name": "details_form",
									"type": "form",
									"mode": "read_only",
									"title": "Details",
									"layout": "horizontal",
									"query_name": "customer",
									"close_route": "customers",
									"back_route": "customers"
								}
							],
							"type": "page"
						},
						{
							"name": "edit",
							"route_params": [
								"customerId"
							],
							"components": [
								{
									"name": "edit_form",
									"type": "form",
									"mode": "update",
									"title": "Edit customer",
									"submit_route": "customers",
									"cancel_route": "customers",
									"query_name": "customer"
								}
							],
							"type": "page"
						}
					],
					"type": "page"
				},
				{
					"name": "countries",
					"type": "page"
				}
			],
			"type": "zone"
		},
		"meta_description": "Clientes Scriptcase",
		"meta_title": "Cientes Scriptcase",
		"footer_text": "Copyright Arduino Software 2015",
		"public_zone": {
			"type": "zone"
		},
		"private_zone": {
			"type": "zone"
		},
		"send_verification_email": true,
		"packages": {}
	}
}